{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./out",
    "lib": ["DOM", "es2021"],
    "sourceMap": true,
    "rootDir": "./src", // Keep rootDir as ./src
    "strict": true,
    "typeRoots": ["node_modules/@types", "./node_modules/@types/vscode"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", ".vscode", "out", "webview-ui"] // Exclude webview-ui
}
